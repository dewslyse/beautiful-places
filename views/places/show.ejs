<% layout('layouts/boilerplate') %>

  <img src="<%= place.image %>" alt="">
  <h1>
    <%= place.name %>
  </h1>
  <h2>
    <%= place.location %>
  </h2>
  <p>
    <%= place.description %>
  </p>

  <div>
    <a href="/places/<%= place._id %>/edit">Edit</a>
  </div>

  <div>
    <form action="/places/<%= place._id %>?_method=DELETE" method="POST">
      <input type="submit" value="Delete">
    </form>
  </div>

  <a href="/places">All places</a>